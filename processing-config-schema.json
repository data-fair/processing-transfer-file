{
  "type": "object",
  "x-display": "tabs",
  "required": ["datasetMode"],
  "allOf": [
    {
      "title": "Jeu de données",
      "oneOf": [
        {
          "title": "Créer un jeu de données",
          "required": ["dataset"],
          "properties": {
            "datasetMode": {
              "type": "string",
              "const": "create",
              "title": "Action"
            },
            "dataset": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "title": "Titre (laissez vide pour utiliser le nom de fichier téléchargé)"
                }
              }
            }
          }
        },
        {
          "title": "Mettre à jour un jeu de données (fichier)",
          "required": ["dataset"],
          "properties": {
            "datasetMode": { "type": "string", "const": "update" },
            "dataset": {
              "type": "object",
              "title": "Jeu de données",
              "properties": {
                "id": { "type": "string", "title": "Identifiant" },
                "title": { "type": "string", "title": "Titre" }
              },
              "layout": {
                "getItems": {
                  "url": "${context.dataFairUrl}/api/v1/datasets?q={q}&select=id,title&${context.ownerFilter}&size=100",
                  "itemsResults": "data.results",
                  "itemTitle": "item.title",
                  "itemKey": "item.id"
                }
              }
            }
          }
        },
        {
          "title": "Mettre à jour des lignes d'un jeu de données (incrémental)",
          "required": ["dataset", "separator"],
          "properties": {
            "datasetMode": { "type": "string", "const": "lines" },
            "dataset": {
              "type": "object",
              "title": "Jeu de données",
              "properties": {
                "id": { "type": "string", "title": "Identifiant" },
                "title": { "type": "string", "title": "Titre" }
              },
              "layout": {
                "getItems": {
                  "url": "${context.dataFairUrl}/api/v1/datasets?q={q}&select=id,title&rest=true&${context.ownerFilter}&size=100",
                  "itemsResults": "data.results",
                  "itemTitle": "item.title",
                  "itemKey": "item.id"
                }
              }
            },
            "separator": {
              "type": "string",
              "title": "Séparateur",
              "default": ",",
              "enum": [",", ";", "-", "/", "|"]
            }
          }
        }
      ]
    },
    {
      "title": "Paramètres",
      "required": ["url"],
      "properties": {
        "url": {
          "title": "URL source",
          "type": "string",
          "description": "les protocoles supportés sont HTTP, HTTPS, FTP et SFTP"
        },
        "username": {
          "title": "Utilisateur",
          "type": "string",
          "layout": {
            "props": {
              "autocomplete": "new-text"
            }
          }
        },
        "password": {
          "title": "Mot de passe",
          "type": "string",
          "layout": {
            "props": {
              "type": "password",
              "autocomplete": "new-password"
            }
          }
        },
        "filename": {
          "title": "Nom du fichier",
          "type": "string",
          "description": "Ce nom apparaitra lors du téléchargement du fichier source du jeu de données. Par défaut, il est déduis du serveur ftp/sftp ou depuis l'url. Définir un nom de fichier peux résoudre les erreurs `400 - .... type is not supported (/api/v1/datasets)`"
        },
        "encoding": {
          "title": "Encodage du fichier",
          "type": "string",
          "description": "Laissez vide pour une détection automatique de celui-ci"
        },
        "ignoreFirstLines": {
          "title": "Ignorer les N première lignes",
          "type": "integer"
        }
      }
    }
  ]
}
